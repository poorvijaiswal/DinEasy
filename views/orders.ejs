<div class="col-6">
    <h1>Uncompleted Orders</h1>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Table No</th>
      <th scope="col">Total Amount</th>
      <th scope="col">Time</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
    <% rows.forEach(function(row) { %>
      <% if (row.status === "processing") { %>
        <tr>
          <td><%= row.table_no %></td>
          <td><%= row.total_price %></td>
          <td><%= row.date %></td>
          <td class="text-end">
            <a href="/orderdetails?id=<%= row.transaction_id %>" type="button" class="btn btn-light btn-small">
              <i class="bi bi-pencil"></i> View Order
            </a>
            <a href="/prepared?trans_id=<%= row.transaction_id %>" type="button" class="btn btn-light btn-small">
              <i class="bi bi-person-x"></i> Prepared
            </a>
          </td>
        </tr>
      <% } %>
    <% }); %>
  </tbody>
</table>

